{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "Image Processing API with TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jasmine",
    "test:dev": "ts-node node_modules/jasmine/bin/jasmine",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "image",
    "processing",
    "api",
    "typescript"
  ],
  "author": "Osama Nasr",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.10.5",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "type": "commonjs"
}
